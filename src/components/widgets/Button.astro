---
const { link, text } = Astro.props;
---

<a href={link} class="button">{text}</a>

<style>
  .button {
    display: inline-flex;
    width: auto;
    padding: 0.5rem 1rem; /* px-4 py-2 */
    margin-top: 1.25rem; /* mt-5 */
    font-size: 0.75rem; /* text-xs */
    font-weight: 600; /* font-semibold */
    border: 1px solid #111827; /* border-neutral-900 */
    border-radius: 9999px; /* rounded-full */
    background-color: #111827; /* bg-neutral-900 */
    color: #f5f5f5; /* text-neutral-100 */
    text-align: center;
    text-decoration: none;
    transition: all 0.3s ease-out;
    cursor: pointer;
  }

  .button:hover {
    background-color: #ffffff; /* hover:bg-white */
    color: #111827; /* hover:text-neutral-900 */
    border-color: #374151; /* hover:border-neutral-700 */
  }

  /* Dark mode styles */
  @media (prefers-color-scheme: dark) {
    .button {
      background-color: #ffffff; /* dark:bg-white */
      color: #111827; /* dark:text-neutral-900 */
      border-color: #111827; /* keep contrast */
    }

    .button:hover {
      background-color: #000000; /* dark:hover:bg-black */
      color: #ffffff; /* dark:hover:text-white */
      border-color: #d1d5db; /* dark:hover:border-neutral-300 */
    }
  }
</style>
